{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              {
                "type": true
              },
              ":BLANK_LINE:",
              ":BUN:",
              ":BLANK_LINE:",
              ":NODE:",
              "@repo/**",
              ":BLANK_LINE:",
              ":URL:"
            ]
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 75
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUselessElse": "off",
        "useEnumInitializers": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noUnsafeDeclarationMerging": "off",
        "noShadowRestrictedNames": "off",
        "noPrototypeBuiltins": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  }
}